<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StickyN">

        <receiver android:name=".StickyNoteWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.example.stickyn.ACTION_WIDGET_PINNED" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sticky_note_widget_info" />
        </receiver>

        <service
            android:name=".WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <!-- StickyN App Icon now acts as "Add Note" (Launcher Pinning) -->
        <activity
            android:name=".PinWidgetActivity"
            android:theme="@style/Theme.StickyN.Translucent"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The note editor is a private activity, opened only from widgets -->
        <activity
            android:name=".NoteEditActivity"
            android:theme="@style/Theme.StickyN.Floating"
            android:exported="false" />

        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/Theme.StickyN.Floating"
            android:exported="false" />

    </application>

</manifest>
